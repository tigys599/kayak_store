<%- layout ('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campgrounds</a>
    </div>

    <% for(camp of campgrounds){ %>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src=<%=camp.image %> >

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text text-white-50">
                            <%= camp.location %>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>">View <%= camp.title %> </a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>

            <a href="">
                <%= camp.title %>
            </a>